<p id="notice"><%= notice %></p>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Trainers</h1>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.name %></td>
        <td><%= link_to 'Show', trainer, class: 'btn btn-secondary' %>
        <%= link_to 'Edit', edit_trainer_path(trainer), class: 'btn btn-info' %>
        <%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add A New Trainer', new_trainer_path, class: "btn btn-primary" %>
